<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">

<form class="row g-3 mt-3">
    <div class="col-md-12">
      <h1>Cadastro de Produtos Financeiros</h1>
    </div>
    <div class="col-md-6">
        <label for="inputNomeProduto" class="form-label">Nome do Produto</label>
        <input type="text" class="form-control" id="inputNomeProduto">
    </div>
    <div class="col-md-3">
        <label for="inputNomeProduto" class="form-label">Juros ao ano</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="10" aria-describedby="basic-addon2">
            <span class="input-group-text" id="basic-addon2">% a.a</span>
        </div>
    </div>
    <div class="col-md-3">
        <label for="inputNomeProduto" class="form-label">Juros ao mês</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="10" aria-describedby="basic-addon2">
            <span class="input-group-text" id="basic-addon2">% a.m</span>
        </div>
    </div>
    <div class="col-md-12">
        <label for="texteareaDescricaoProduto" class="form-label">Descrição do Produto</label>
        <textarea class="form-control" id="texteareaDescricaoProduto" rows="3"></textarea>
    </div>
    <div class="col-md-12 mb-5">
        <button type="button" class="btn btn-primary float-end">Avançar</button>
    </div>
</form>

</div>
</body>
<%- include('../../partials/footer.ejs') %>